@model MvcAuth.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<!--===============================================================================================-->
<link href="~/Assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/vendor/animate/animate.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/vendor/animsition/css/animsition.min.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/vendor/select2/select2.min.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/vendor/daterangepicker/daterangepicker.css" rel="stylesheet">
<!--===============================================================================================-->
<link href="~/Assets/css/util.css" rel="stylesheet">
<link href="~/Assets/css/main.css" rel="stylesheet">
<!--===============================================================================================-->

<div class="container-login100" style="background-image: url('../../Assets/images/medical-wallpaper.jpg');">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30" style="height:550px; width:690px;">
        <div class="login100-form validate-form">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <span class="login100-form-title p-b-37">
                    Cree una cuenta nueva
                </span>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })


                <div class="wrap-input100 validate-input m-b-20" data-validate="Ingrese correo">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", @name = "username", @placeholder = "Correo" })
                    <span class="focus-input100"></span>
                </div>


                <div class="wrap-input100 validate-input m-b-20" data-validate="Ingrese contraseña">
                    @Html.PasswordFor(m => m.Password, new { @class = "input100", @name = "pass", @placeholder = "Contraseña" })
                    <span class="focus-input100"></span>
                </div>


                <div class="wrap-input100 validate-input m-b-20" data-validate="Repita contraseña">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", @name = "pass", @placeholder = "Confirmar contraseña" })
                    <span class="focus-input100"></span>
                </div>
                
                
                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="Registrarse" />
                    </div>
            }

        </div>


    </div>
</div>



<!--===============================================================================================-->
<script src="~/Assets/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
